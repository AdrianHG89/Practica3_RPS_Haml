%html
	%head
		%title Practica - Rock, Paper and Scissors
		:css
			BODY {
				font: 8pt Verdana, Geneva, Arial, Helvetica, sans-serif;
				margin: 10 0 10 0px;
				text-align: center;
				background-color: #ebebeb;
			}
			#contenedor{
				text-align: left;
				width: 770px;
				margin: auto;
			}
			#cabecera{
				background-color: #d0d0ff;
				color: #333300;
				font-size:12pt;
				font-weight: bold;
				padding: 3 3 3 10px;
			}
			#cuerpo{
				margin: 10 0 10 0px;
			}
			#lateral{
				width: 310px;
				background-color: #999999;
				float:left;
			}
			#principal{
				margin-left: 320px;
				background-color: #ffffff;
				padding: 4 4 4 4px;
				width: 120px;
			}
			#otrolado{
				width: 310px;
				float: right;
				background-color: #999999;
			}
			#pie{
				background-color: #cccccc;
				padding: 3 10 3 10px;
				text-align:right;   
				clear: both;
			}
	%body
		#contenedor
			#cabecera
				Practica 3 - Rock, Paper and Scissors
				%ol
					%h3 RPS
					%a{:href => '?choice=rock'} Rock
					%a{:href => '?choice=paper'} Paper
					%a{:href => '?choice=scissors'} Scissors
			#cuerpo
				#lateral
					%h2 Persona:
					
					- if(player_throw == 'rock')
						%center
							%img{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/rock_zps0ebe7421.jpg', :alt => 'Rock', height: '250', width: '250'}
					- elsif (player_throw == 'scissors')
						%center
							%img{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/tijeras_zps543ca9ac.jpg', :alt => 'Scissors', height: '250', width: '250'}
					- elsif (player_throw == 'paper')
						%center
							%img{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/paper_zpse0ed0ca5.jpg', :alt => 'Paper', height: '250', width: '250'}
				#otrolado
					%h2 Maquina:
					- if(throws.include?(player_throw))	
